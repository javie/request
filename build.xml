<?xml version="1.0" encoding="UTF-8"?>

<project name="javie/request" basedir="." default="build">
    <target name="build" description="Minify the JS">
        <exec executable="java">
            <arg value="-jar"/>
            <arg value="${basedir}/vendor/packagist/yuicompressor-bin/bin/yuicompressor.jar"/>
            <arg value="--charset"/>
            <arg value="utf-8"/>
            <arg value="--preserve-semi"/>
            <arg value="--line-break"/>
            <arg value="150"/>
            <arg value="-o"/>
            <arg value="${basedir}/request.min.js"/>
            <arg value="${basedir}/request.js"/>
        </exec>
    </target>
</project>
